<button type="button"><h1><%= link_to "Log Out", logout_path%></h1></button>
<h1>Welcome back, <%= @user.username %></h1>

<h3>New Message</h3>
<%= form_for(@message) do |f| %>
  <%= f.label :reciever_name, "Receiver Name"  %><br>
  <%= f.text_field :receiver_id %><br>
  <%= f.label :content, "Message"  %><br>
  <%= f.text_area :content %><br>
  <%= f.submit %>
<% end %>
<hr>
<div id="receiver_side_panel">
  <% @user.receiver.uniq.each do |receiver| %>
    <button type="button"><h1><%= link_to receiver.username, show_message_path(receiver), :target => "iframe" %></h1></button>
  <% end %>
</div>
<div id="iframe_side_panel">
  <iframe src="/message/show" name="iframe" width="600" height="400"></iframe>
</div>
